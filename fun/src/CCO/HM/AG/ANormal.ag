-------------------------------------------------------------------------------
-- AST
-------------------------------------------------------------------------------

data AVal
  | ANat     i :: {Int}
  | AVar     x :: {Var}
  | AField   x :: {Var}  i :: {Int}

type AVals = [AVal]

data AExp
  | AVal     v :: AVal
  | AApp     e :: AExp   v :: AVal
  | ALam     xs :: {[Var]}  t :: ATm
  | AIf      c :: AVal   t1 :: ATm  t2 :: ATm
  | AAlloc   tag :: {Int}  vs :: AVals
  | APrim    op :: {String} vs :: AVals
  | AForce   e :: AExp
  | ATail    e :: AExp

data ATm
  | AExp     e :: AExp
  | ALet     x :: {Var}  e :: AExp t :: ATm
