module{CCO.HM.AG.Base}{}{}
imports
{
import CCO.SourcePos
import CCO.HM.AG.BaseHelpers
}

-------------------------------------------------------------------------------
-- Syntax
-------------------------------------------------------------------------------

data Tm
  | Tm  pos :: {SourcePos}  t :: Tm_

type Tms = [Tm]

data Tm_
  | Nat    i :: {Int}
  | Var    x :: {Var}
  | Lam    x :: {Var}  t1 :: Tm
  | App    t1 :: Tm  t2 :: Tm
  | Let    x :: {Var}  t1 :: Tm  t2 :: Tm
  | If     c :: Tm  t1 :: Tm  t2 :: Tm
  | Prim   op :: {String} args :: {[Var]}
  | Thunk  t :: Tm
  | Force  t :: Tm
