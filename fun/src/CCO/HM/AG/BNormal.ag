------------------------------------------------------------------------
-- AST
------------------------------------------------------------------------

data BVal
  | BNat     i :: {Int}
  | BVar     x :: {Var}
  | BField   x :: {Var}  i :: {Int}

type BVals = [BVal]

data BExp
  | BVal     v :: BVal
  | BApp     v1 :: BVal  v2 :: BVal
  | BLam     x :: {Var}  b :: BBind
  | BPrim    op :: {String} vs :: BVals
  | BAlloc   tag :: {Int} vs :: BVals
  | BWrap    b :: BBind
  | BForce   e :: BExp
  | BTail    e :: BExp

type Binding = (Var, BExp)
type Bindings = [Binding]

data BBind
  | BBind    es :: Bindings  t :: BTm

data BTm
  | BExp     e :: BExp
  | BIf      x :: {Var}  b1 :: BBind  b2 :: BBind

data BRoot
  | BRoot    b :: BBind
